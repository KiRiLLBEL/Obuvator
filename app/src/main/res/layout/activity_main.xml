<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="5dp"
        android:paddingVertical="10dp">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Сопряженные устройства"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="5dp"/>

                <ListView
                    android:id="@+id/devices"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginHorizontal="15dp"/>

            </LinearLayout>



        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/text_connected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@color/white"
                android:text="Не подключено"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:paddingVertical="10dp"/>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal = "5dp"
            android:layout_marginTop = "5dp"
            android:layout_marginBottom = "10dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:text="Развязать"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:layout_marginVertical="5dp"
                    android:id="@+id/open"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:text="Остановить"
                    android:layout_marginVertical="5dp"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:id="@+id/stop"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="15dp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:text="Завязать"
                    android:id="@+id/close"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="15dp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:text="Увеличить натяжение"
                    android:id="@+id/more"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="15dp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:text="Уменьшить натяжение"
                    android:id="@+id/less"/>
            </LinearLayout>


        </androidx.cardview.widget.CardView>



    </LinearLayout>



</RelativeLayout>